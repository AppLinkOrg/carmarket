        <view class="txt-black xiaobtn margin-left-30" bindtap="toast">龙岗区</view>
      </view>

      <view class="flex-row margin-top-30">
        <view class="txt-black xiaobtn margin-left-50" bindtap="toast">南山区</view>
        <view class="txt-black xiaobtn margin-left-30" bindtap="toast">宝安区</view>
      </view>

      <view class="flex-row margin-top-30">
        <view class="txt-black xiaobtn margin-left-50" bindtap="toast">龙华区</view>
        <view class="txt-black xiaobtn margin-left-30" bindtap="toast">福田区</view>
      </view>

      <view class="flex-row margin-top-30">

        <view class="txt-black xiaobtn margin-left-50" bindtap="toast">坪山新区</view>
        <view class="txt-black xiaobtn margin-left-30" bindtap="toast">盐田区</view>
      </view>

      <view class="flex-row margin-top-30">
        <view class="txt-black xiaobtn margin-left-50" bindtap="toast">光明新区</view>
        <view class="txt-black xiaobtn margin-left-30" bindtap="toast">大鹏新区</view>
      </view>

    </view>
  </view>
</view>

<view style="height:250rpx;"></view>


