
.borderbottom {
  border-bottom: 1px solid rgb(226, 225, 225);
  margin-top: 10rpx;
}

.box {
  border-radius: 10rpx;
  box-shadow: 1rpx 2rpx 25rpx 2rpx rgb(173, 173, 173);
  height: 300rpx;
  width: 95%;
  margin: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.orpay{
  width: 140rpx;
  height: 50rpx;
  background-color: rgb(247, 120, 47);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
