<block>
  <view class="bg-white top">
    <view class='txt-black margin-top-30 margin-left-30 margin-bottom-20'>{{biaoti}}</view>
    <view class="margin-left-30 margin-top-20">{{vin}}</view>
  </view>
</block>
<view class="margin-top-20"></view>
<view class='flex-row bg-white'>
  <view class=' btn  txt-black'>
    <view class='flex-row margin-left-20'>
      <image class='icon-25 ' src='{{uploadpath}}resource/{{res.search}}' bindtap="bindpart"></image>
    </view>
    <input class="flex-row flex-1  margin-left-20 margin-right-20" placeholder='空调' bindinput="bindpart" value="{{partinput}}" bindconfirm="bindpart"></input>
    <view class='margin-right-20'>
      <image class='icon-25 ' src='{{uploadpath}}resource/{{res.delect}}' bindtap='binddelect'></image>
    </view>
  </view>
</view>
<view class="flex-row">
  <!--左侧-->
  <scroll-view scroll-y class="left margin-top-30 padding-20 ">
    <view class="txt-black">已添加配件</view>

    <view class="flex-row column">
      <view wx:for='{{addlist}}' wx:key='s' wx:for-index='index' class="margin-top-30 flex-row flex-top">
        <view class=" btnb chaochu h6">{{item.name}}</view>
        <image class="icon-17  " style="margin-left:-6rpx;" src="{{uploadpath}}resource/{{res.quchu}}" bindtap="bindclear" id="{{item.id}}" data-index="{{index}}"></image>
      </view>
    </view>
  </scroll-view>

  <!--右侧-->
  <scroll-view scroll-y class="right ">
    <view class="txt-black margin-top-30 margin-left-30">请选择</view>
    <block wx:for="{{groupslist}}" wx:key="k" wx:for-index='idx' wx:if='{{item.check==true}}'>
      <view class="txt-red margin-left-30 margin-top-20" id="{{idx}}" data-name="{{item.label}}" bindtap="bindadd">{{item.label}}</view>
      <view class="bot"></view>
    </block>
  </scroll-view>

</view>

<view class="button txt-white" bindtap="bindnext">下一步</view>