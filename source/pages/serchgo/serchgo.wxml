<view class=''> 
  <view class='margin-top'>
    <view class=' flex-row '>
      <view class='borderleft'></view>
      <view class='txt-bold txt-black margin-left-10'>上传照片</view>
    </view>
    <view class='flex-row '>
      <view class='margin-left-30 margin-top-20'>
        <image class='icon-90' hidden='{{one}}' src='{{uploadpath}}resource/{{res.upload}}' bindtap="clickimage"></image>
        
        <image class='icon-90'hidden='{{!one}}' src='{{uploadpath}}product/{{image}}' bindtap="clickimage"></image>
      </view>
    </view>

    <view class="xia margin-top margin-bottom-30"></view>

    <view class=' flex-row '>
      <view class='borderleft'></view>
      <view class='txt-bold txt-black margin-left-10'>所需配件信息</view>
    </view>

    <view class='put gray-block'>
      <textarea class="h5 margin-top-30 margin-left-30" placeholder='此处输入配件文字描述' bindconfirm="bindart" bindinput="bindart" >{{item.struct_label}}</textarea>
    </view>
  </view>

</view>
<view class='vbtn' bindtap='complete' data-name='{{item.struct_label}}'>保存</view>