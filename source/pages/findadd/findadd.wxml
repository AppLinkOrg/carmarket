<view class="bg-white margin-top-5">
  <view class="cen flex-row margin-top-20 margin-bottom-20" bindtap="bindadd">
    <image class="icon-25" src="{{uploadpath}}resource/{{res.shoujia}}"></image>
    <view class="txt-black txt-bold margin-left-10">添加配件</view>
  </view>
</view>

<view class="bg-white margin-top-20">
  <view class="flex-row margin-top-20">
    <view class="txt-black txt-bold margin-left-30 margin-right-10">发票</view>
    <view class="margin-left-50">
      <image wx:if="{{fapiao=='N'}}" id='N' class="imgicon" src="{{uploadpath}}resource/{{res.bukai}}" bindtap="bindfapiao"></image>
      <image wx:if="{{fapiao=='Y'}}" id="Y" class="imgicon" src="{{uploadpath}}resource/{{res.	kaifapiao}}" bindtap="bindfapiao"></image>
    </view>
    <view class="margin-left-20">不开发票</view>
  </view>
</view>

<view class="margin-top-5 bg-white flex-row flex-wrap">
  <view class="txt-black txt-bold margin-left-30 margin-top">品质</view>
  <view class="margin-left-30" data-chose='A' bindtap="bindchose">
    <view class="btn flex-row {{chose=='A'?'bg-white':'gray-block'}}">
      <view class="flex-row  {{chose!='A'?'':'txt-red'}}">原厂</view>
    </view>
  </view>

  <view class="" data-chose='B' bindtap="bindchose">
    <view class="btn flex-row {{chose=='B'?'bg-white':'gray-block'}}">
      <view class="flex-row  {{chose!='B'?'':'txt-red'}}">品牌</view>
    </view>
  </view>

  <view class="left" data-chose='C' bindtap="bindchose">
    <view class="btn flex-row {{chose=='C'?'bg-white':'gray-block'}}">
      <view class="flex-row  {{chose!='C'?'':'txt-red'}}">原厂再制造</view>
    </view>
  </view>

  <view class="" data-chose='D' bindtap="bindchose">
    <view class="btn flex-row {{chose=='D'?'bg-white':'gray-block'}}">
      <view class="flex-row  {{chose!='D'?'':'txt-red'}}">拆车件</view>
    </view>
  </view>

  <view class="left" data-chose='E' bindtap="bindchose">
    <view class="btn flex-row {{chose=='E'?'bg-white':'gray-block'}}">
      <view class="flex-row  {{chose!='E'?'':'txt-red'}}">其他</view>
    </view>
  </view>
</view>

