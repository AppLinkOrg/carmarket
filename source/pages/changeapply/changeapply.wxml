<view class=' flex-row margin-top  '>
  <view class='borderleft'></view>
  <view class='margin-left-10 txt-black txt-bold'>退换信息</view>
</view>
<view class="margin-30">手机号码：{{change.receivecontact}}</view>
<view class="tex">
  <textarea class="h5 margin-left-10 margin-top-10" value="{{content}}" bindinput="bindcon" placeholder="为了帮我们做更好，请尽可能详细描述您的退换货原因，并提交后台，我们平台收到后将尽快处理"></textarea>
</view>
<view class="bott margin-top"></view>

<view class=' flex-row margin-top  '>
  <view class='borderleft'></view>
  <view class='margin-left-10 txt-black txt-bold'>选择配件</view>
</view>
<view class='flex-row flex-wrap margin-top-20'>
  <view class='txt-black margin-left-30'>订单编号：</view>
  <view class='txt-black '>{{change.orderno}}</view>
</view>
<view class='flex-row flex-wrap margin-bottom-20 margin-left-30 margin-top-10'>
  <view class='txt-black '>订单时间：</view>
  <view class='txt-black '>{{change.order_time_formatting}}</view>
</view>

<view class='flex-row' wx:for="{{change.orderitems}}" wx:for-index='idx'>
  <view class='margin-left-30 '>
    <image wx:if="{{!item.xz}}"  bindtap="bindxuanze" data-id="{{idx}}" class='icon-25 margin-top' src='{{uploadpath}}resource/{{res.no}}'></image>
    <image wx:if="{{item.xz}}"  bindtap="bindxuanze" data-id="{{idx}}" class='icon-25 margin-top' src='{{uploadpath}}resource/{{res.zhong}}'></image>

    </view>
    <view class='margin-left-30 '>
      <view class=' txt-black marg'>{{item.name}}</view>
      <view class='flex-row  margin-top-10 '>
        <view class=''>品质：</view>
        <view class=''>{{}}</view>
      </view>
      <view class='flex-row flex-wrap margin-bottom-20'>
        <view class=''>单价：</view>
        <view class='txt-red'>{{item.price}}元</view>
      </view>
    </view>
    <view class="flex-1"></view>
    <view class="flex-row margin-top">
      <view class=''>
        <image class='icon-25 ' src='{{uploadpath}}resource/{{res.reduce}}' data-id="{{idx}}" bindtap='bindreduce'></image>
      </view>
      <view class='txt-blue margin-left-30 margin-right-30'>{{item.qty}}</view>
      <view class='margin-right-20'>
        <image class='icon-25 ' src='{{uploadpath}}resource/{{res.add}}' data-id="{{idx}}" bindtap='bindadd'></image>
      </view>
    </view>
  </view>

  <view class='bott margin-top-20 margin-bottom-20'></view>
  <view class='flex-row  '>
  <image wx:if="{{quan=='B'}}" id="B" class='icon-25 margin-left-30' src='{{uploadpath}}resource/{{res.no}}' bindtap="bindall"></image>
   <image wx:if="{{quan=='Q'}}" id="Q" class='icon-25 margin-left-30' src='{{uploadpath}}resource/{{res.zhong}}' bindtap="bindall"></image>
    <view class="margin-left-10">全选</view>

    <view class="flex-1"></view>
    <view class=' txt-black'>总计：</view>
    <view class='txt-red margin-right-30'>-￥{{change.totalamount}}元</view>
  </view>
  <view class='bott margin-top-20 margin-bottom-20'></view>
  <view class="btn-btn" bindtap='bindsub'>提交</view>